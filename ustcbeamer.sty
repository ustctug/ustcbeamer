%开始演示

\newcommand{\maketitleframe}{
	%取消footline,sidebar
	\setbeamertemplate{footline}[footlineoff]
	%%设置本命令以后的背景如下
	\usebackgroundtemplate{%
		\iftheme@usetikz
			\input{./theme/ustc_cover.tex}
		\fi
		\iftheme@usepdf
			\includegraphics{./theme/ustc_cover.pdf}
		\fi
	}%
	%封面页
	\begin{frame}%
		\maketitle%
	\end{frame}%
	%设置本命令以后的背景如下
	\usebackgroundtemplate{%
		\iftheme@usetikz
			\input{./theme/ustc_background.tex}
		\fi
		\iftheme@usepdf
			\includegraphics{./theme/ustc_background.pdf}
		\fi
	}%
}%
